<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBGblueShade"
    android:orientation="vertical"
    android:clickable="true">
    <RelativeLayout
        android:id="@+id/container_add_photoes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:visibility="visible">

        <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
            android:id="@+id/add_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="ADD PHOTO"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
            android:id="@+id/continue_image_section"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="CONTINUE"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/image_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/continue_image_section"
            android:layout_marginTop="@dimen/button_height" />
    </RelativeLayout>
</LinearLayout>