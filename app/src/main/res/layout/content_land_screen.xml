<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested_scroll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBGblueShade"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_white_with_border"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/colorLightGray"
                        android:padding="1dp">

                        <ImageView
                            android:id="@+id/profile_pic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimary" />

                        <ImageView
                            android:id="@+id/img_upload"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/ic_photo_camera_upload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.6"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="JOHN DOE"
                            android:textColor="@color/colorTextDark"
                            android:textSize="14sp" />

                        <com.android.llc.proringer.viewsmod.textview.ProLightTextView
                            android:layout_marginTop="15dp"
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Somewhere in earth"
                            android:textColor="@color/colorAccent"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/colorLightGray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
                        android:id="@+id/tv_active_projects"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/colorTextDark"
                        android:textSize="28sp" />

                    <com.android.llc.proringer.viewsmod.textview.ProLightTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Pojects Active"
                        android:textColor="@color/colorTextDark"
                        android:textSize="10sp" />

                </LinearLayout>
            </LinearLayout>

            <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
                android:id="@+id/post_project"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="POST A PROJECT"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/background_white_with_border"
                    android:minHeight="90dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:weightSum="2">

                        <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:padding="5dp"
                            android:text="NEW MESSAGES"
                            android:textColor="@color/colorTextDark"
                            android:textSize="12sp" />

                        <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:gravity="right"
                            android:padding="5dp"
                            android:text="View All"
                            android:textColor="@color/colorAccent"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorLightGray" />

                    <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:text="0"
                        android:textSize="28sp" />

                </LinearLayout>

                <View
                    android:layout_width="5dp"
                    android:layout_height="1px" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/background_white_with_border"
                    android:minHeight="90dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:weightSum="2">

                        <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:padding="5dp"
                            android:text="FAVORITE PROS"
                            android:textColor="@color/colorTextDark"
                            android:textSize="12sp" />

                        <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:gravity="right"
                            android:padding="5dp"
                            android:text="View All"
                            android:textColor="@color/colorAccent"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorLightGray" />

                    <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
                        android:id="@+id/tv_favorite_pros"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp"
                        android:text="0"
                        android:textSize="28sp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="10dp"
                android:background="@color/colorLightGray" />


            <RelativeLayout
                android:id="@+id/userInformation"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize">

                <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="User Information"
                    android:textColor="@color/colorTextDark"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_right_arrow_orange" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="10dp"
                android:background="@color/colorLightGray" />

            <RelativeLayout
                android:id="@+id/login_settings"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize">

                <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Login Settings"
                    android:textColor="@color/colorTextDark"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_right_arrow_orange" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="10dp"
                android:background="@color/colorLightGray" />

            <RelativeLayout
                android:id="@+id/notification"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize">

                <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Notifications"
                    android:textColor="@color/colorTextDark"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_right_arrow_orange" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="10dp"
                android:background="@color/colorLightGray" />

            <RelativeLayout
                android:id="@+id/home_schedule"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize">

                <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Home Scheduler"
                    android:textColor="@color/colorTextDark"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_right_arrow_orange" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="10dp"
                android:background="@color/colorLightGray" />

            <RelativeLayout
                android:id="@+id/invite_a_friend"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize">

                <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Invite A Friend"
                    android:textColor="@color/colorTextDark"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_right_arrow_orange" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorLightGray" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/LLNetworkDisconnection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wifi_disconnect"
            />

        <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextBlack"
            android:text="Check Your Network Connection"/>


    </LinearLayout>

</LinearLayout>