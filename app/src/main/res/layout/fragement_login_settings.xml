<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBGblueShade"
    android:fillViewport="false"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbars="none"
    app:layout_collapseParallaxMultiplier="1.0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Current Email"
            android:textAllCaps="true"
            android:textColor="@color/colorTextDark"
            android:textSize="14sp" />

        <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
            android:id="@+id/current_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/background_disable_inputtext"
            android:hint="currentemailaddress@email.com"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/colorTextDark"
            android:textSize="14sp" />

        <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="New Email"
            android:textAllCaps="true"
            android:textColor="@color/colorTextDark"
            android:textSize="14sp" />

        <com.android.llc.proringer.viewsmod.edittext.ProLightEditText
            android:id="@+id/new_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_selecter"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/colorTextDark"
            android:textSize="14sp" />

        <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="confirm New Email"
            android:textAllCaps="true"
            android:textColor="@color/colorTextDark"
            android:textSize="14sp" />

        <com.android.llc.proringer.viewsmod.edittext.ProLightEditText
            android:id="@+id/confirm_new_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_selecter"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/colorTextDark"
            android:textSize="14sp" />

        <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
            android:id="@+id/update_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="UPDATE EMAIL"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Current password"
            android:textAllCaps="true"
            android:textColor="@color/colorTextDark"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.android.llc.proringer.viewsmod.edittext.ProLightEditText
                android:id="@+id/current_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/edit_text_selecter"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/colorTextDark"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/show_password"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:src="@drawable/ic_show_password" />
        </RelativeLayout>

        <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="New password"
            android:textAllCaps="true"
            android:textColor="@color/colorTextDark"
            android:textSize="14sp" />

        <com.android.llc.proringer.viewsmod.edittext.ProLightEditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_selecter"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/colorTextDark"
            android:textSize="14sp" />

        <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm New password"
            android:textAllCaps="true"
            android:textColor="@color/colorTextDark"
            android:textSize="14sp" />

        <com.android.llc.proringer.viewsmod.edittext.ProLightEditText
            android:id="@+id/confirm_new_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text_selecter"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/colorTextDark"
            android:textSize="14sp" />

        <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="CHANGE PASSWORD"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>