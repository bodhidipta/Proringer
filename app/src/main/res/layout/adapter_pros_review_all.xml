<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBGblueShade"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@color/colorLightGray" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/img_profile">


                    <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
                        android:id="@+id/tv_report"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Report"
                        android:textColor="@color/colorTextDark"
                        android:textSize="16sp"></com.android.llc.proringer.viewsmod.textview.ProRegularTextView>


                    <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_report"
                        android:text="Terry Belley"
                        android:textColor="@color/colorTextDark"
                        android:textSize="16sp"></com.android.llc.proringer.viewsmod.textview.ProRegularTextView>


                    <RatingBar
                        android:id="@+id/rbar"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginTop="5dp"
                        android:numStars="5"
                        android:rating="4.5"
                        android:stepSize="0.5" />


                    <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
                        android:id="@+id/tv_review_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_name"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/rbar"
                        android:text="02-20-2017"
                        android:textSize="12sp" />

                </RelativeLayout>

            </RelativeLayout>

            <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
                android:id="@+id/tv_review_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_profile"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="hbhf huidsbfgnkfri ioreurj kirenr gvsdhr fnjfmn jerjhr jndnj rnjrnjrnrnjr j jrjrjr hbjhfhfhfhb jfjhf"
                android:textSize="12sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/CardViewReply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        card_view:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_reply_review" />

                <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
                    android:id="@+id/tv_review_reply_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="gvsgsgsgsg"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="12sp" />


                <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
                    android:id="@+id/tv_review_reply_on_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="gvsgsgsgsg"
                    android:textSize="12sp" />

            </LinearLayout>



            <com.android.llc.proringer.viewsmod.textview.ProRegularTextView
                android:id="@+id/tv_review_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="hbhf huidsbfgnkfri ioreurj kirenr gvsdhr fnjfmn jerjhr jndnj rnjrnjrnrnjr j jrjrjr hbjhfhfhfhb jfjhf"
                android:textSize="12sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>