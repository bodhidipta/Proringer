<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_confirm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBGblueShade"
    >

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tool_back"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_chevron_left" />

        <ImageView
            android:id="@+id/header_icon"
            android:layout_width="56dp"
            android:layout_height="match_parent"
           android:layout_centerInParent="true"
            android:src="@drawable/icon" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:padding="12dp"
            android:src="@drawable/ic_home" />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.android.llc.proringer.viewsmod.textview.ProBoldTextView
            android:id="@+id/header_text"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Project Details"
            android:textColor="@color/colorTextDark"
            android:background="@color/colorPrimary"
            android:textSize="18sp"
            android:clipToPadding="false"
            android:elevation="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_height="45dp">


            <com.android.llc.proringer.viewsmod.textview.ProSemiBoldTextView
                android:layout_weight="1"
                android:text="Posted In"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:elevation="3dp"/>

            <com.android.llc.proringer.viewsmod.textview.ProSemiBoldTextView
                android:layout_weight="2"
                android:text="10001"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:background="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:elevation="3dp"/>



        </LinearLayout>

    </LinearLayout>


</RelativeLayout>